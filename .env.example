# Silver Estimation App - Environment Configuration Template
# Copy this file to .env and update values as needed

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Application environment (development, staging, production)
# APP_ENV=development

# Enable debug mode (true/false)
# DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# ==============================================================================
# DATABASE SETTINGS
# ==============================================================================

# Database file path (relative or absolute)
# If not set, defaults to database/silverestimate.db
# DB_PATH=database/silverestimate.db

# Database backup directory
# BACKUP_DIR=database/backups

# Automatic backup interval in hours (0 to disable)
# AUTO_BACKUP_INTERVAL=24

# Maximum number of backups to retain
# MAX_BACKUPS=7

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# Password hash iterations (higher = more secure but slower)
# Default: 100000
# PASSWORD_HASH_ITERATIONS=100000

# Encryption key derivation iterations
# Default: 100000
# KDF_ITERATIONS=100000

# Session timeout in minutes (0 for no timeout)
# SESSION_TIMEOUT=30

# Require password complexity (true/false)
# REQUIRE_STRONG_PASSWORD=true

# ==============================================================================
# UI SETTINGS
# ==============================================================================

# Default theme (light, dark, system)
# UI_THEME=system

# Default font family
# UI_FONT_FAMILY=Segoe UI

# Default font size
# UI_FONT_SIZE=10

# Enable animations (true/false)
# UI_ANIMATIONS=true

# ==============================================================================
# LIVE RATE SETTINGS
# ==============================================================================

# Enable live rate fetching (true/false)
# LIVE_RATE_ENABLED=true

# Live rate update interval in minutes
# LIVE_RATE_INTERVAL=30

# Live rate source URL (leave empty for default)
# LIVE_RATE_URL=

# Timeout for rate fetching in seconds
# LIVE_RATE_TIMEOUT=10

# ==============================================================================
# PERFORMANCE SETTINGS
# ==============================================================================

# Enable performance monitoring (true/false)
# PERFORMANCE_MONITORING=false

# Item cache size (number of items to cache)
# ITEM_CACHE_SIZE=1000

# Enable query result caching (true/false)
# QUERY_CACHE_ENABLED=true

# ==============================================================================
# PRINTING SETTINGS
# ==============================================================================

# Default printer name (leave empty for system default)
# DEFAULT_PRINTER=

# Print DPI
# PRINT_DPI=300

# Enable print preview by default (true/false)
# PRINT_PREVIEW_DEFAULT=true

# ==============================================================================
# EXPORT/IMPORT SETTINGS
# ==============================================================================

# Default export directory
# EXPORT_DIR=exports

# Default import directory
# IMPORT_DIR=imports

# Export format (csv, xlsx, json)
# DEFAULT_EXPORT_FORMAT=xlsx

# ==============================================================================
# DEVELOPER SETTINGS (Development only)
# ==============================================================================

# Enable SQL query logging (true/false)
# SQL_LOGGING=false

# Enable detailed error messages (true/false)
# DETAILED_ERRORS=false

# Enable profiling (true/false)
# ENABLE_PROFILING=false

# Mock external services for testing (true/false)
# MOCK_SERVICES=false

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# Enable cloud backup (future feature)
# FEATURE_CLOUD_BACKUP=false

# Enable multi-user support (future feature)
# FEATURE_MULTI_USER=false

# Enable advanced reporting (future feature)
# FEATURE_ADVANCED_REPORTS=false

# ==============================================================================
# NOTES
# ==============================================================================
#
# - Lines starting with # are comments and will be ignored
# - All settings are optional; defaults will be used if not specified
# - Boolean values: true/false (case insensitive)
# - Paths can be relative (to project root) or absolute
# - Environment variables take precedence over .env file
# - Never commit .env file to version control (already in .gitignore)
# - Restart application after changing settings for changes to take effect
#
